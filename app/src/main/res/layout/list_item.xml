<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardMarginVertical"
    android:layout_marginLeft="@dimen/cardMarginHorizontal"
    android:layout_marginRight="@dimen/cardMarginHorizontal"
    android:layout_marginTop="@dimen/cardMarginVertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="107dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:id="@+id/image_view_id"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:orientation="horizontal"
                android:id="@+id/linear_Layout_rate_id"
                android:background="#000">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:id="@+id/star_rate_id"
                    android:src="@drawable/rate_it"/>
                <TextView
                    android:id="@+id/rate_num_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    tools:text="5.5"
                    android:textColor="#fff"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#000"
                    tools:text="San Andarias"/>

                <TextView
                    android:id="@+id/movieDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#FF030379"
                    tools:text="25 april 2015" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="action"
                    android:text="Action"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/adventure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="action"
                    android:text="Adventure"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/comedy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="Comedy"
                    android:text="Comedy"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/animation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="Animation"
                    android:text="Anime"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/crime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="Crime"
                    android:text="Crime"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/drama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="Drama"
                    android:text="Drama"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/romance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="Romance"
                    android:text="Romance"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/science_fiction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="Science Fiction"
                    android:text="Sci-Fi"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />

                <TextView
                    android:id="@+id/none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/gener_background"
                    android:fontFamily="sans-serf-light"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    tools:text="None"
                    android:text="None"
                    android:visibility="gone"
                    android:textColor="#fff"
                    />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>