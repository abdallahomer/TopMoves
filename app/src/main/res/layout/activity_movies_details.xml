<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_id"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </com.google.android.youtube.player.YouTubePlayerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginEnd="@dimen/cardDetailsMarginLeftRight"
                android:layout_marginLeft="@dimen/cardDetailsMarginLeftRight"
                android:layout_marginRight="@dimen/cardDetailsMarginLeftRight"
                android:layout_marginStart="@dimen/cardDetailsMarginLeftRight"
                app:cardBackgroundColor="#cccfcd"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">

                <TextView
                    android:id="@+id/details_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000"
                    tools:text="Inception"

                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_youtube" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginEnd="@dimen/cardDetailsMarginLeftRight"
            android:layout_marginLeft="@dimen/cardDetailsMarginLeftRight"
            android:layout_marginRight="@dimen/cardDetailsMarginLeftRight"
            android:layout_marginStart="@dimen/cardDetailsMarginLeftRight"
            app:cardBackgroundColor="#eceded"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">

            <ImageView
                android:id="@+id/imdb_view_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_imdb" />


            <ImageView
                android:id="@+id/home_view_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_home" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginVertical"
                android:layout_marginStart="@dimen/cardMarginVertical"
                android:layout_weight="1"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_clock" />

                    <TextView
                        android:id="@+id/details_runtime_id"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="@dimen/cardMarginHorizontal"
                        android:layout_marginLeft="@dimen/cardMarginHorizontal"
                        android:layout_marginRight="@dimen/cardMarginHorizontal"
                        android:layout_marginStart="@dimen/cardMarginHorizontal"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        tools:text="148" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginVertical"
                android:layout_marginStart="@dimen/cardMarginVertical"
                android:layout_weight="1"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_year" />

                    <TextView
                        android:id="@+id/details_year_id"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="@dimen/cardMarginHorizontal"
                        android:layout_marginLeft="@dimen/cardMarginHorizontal"
                        android:layout_marginRight="@dimen/cardMarginHorizontal"
                        android:layout_marginStart="@dimen/cardMarginHorizontal"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        tools:text="2015" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginEnd="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginVertical"
                android:layout_marginRight="@dimen/cardMarginVertical"
                android:layout_marginStart="@dimen/cardMarginVertical"
                android:layout_weight="1"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_vote" />

                    <TextView
                        android:id="@+id/details_vote_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="@dimen/cardMarginHorizontal"
                        android:layout_marginLeft="@dimen/cardMarginHorizontal"
                        android:layout_marginRight="@dimen/cardMarginHorizontal"
                        android:layout_marginStart="@dimen/cardMarginHorizontal"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        tools:text="253658" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginEnd="@dimen/cardMarginVertical"
            android:layout_marginLeft="@dimen/cardMarginVertical"
            android:layout_marginRight="@dimen/cardMarginVertical"
            android:layout_marginStart="@dimen/cardMarginVertical"
            android:layout_marginTop="@dimen/cardMarginVertical"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:text="Tagline :"
                    android:textSize="15sp"
                    tools:text="Tagline :" />

                <TextView
                    android:id="@+id/details_tagline_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/cardMarginHorizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000"
                    tools:text="what is tagline?" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginEnd="@dimen/cardMarginVertical"
            android:layout_marginLeft="@dimen/cardMarginVertical"
            android:layout_marginRight="@dimen/cardMarginVertical"
            android:layout_marginStart="@dimen/cardMarginVertical"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:text="Overview :"
                    android:textSize="15sp"
                    tools:text="Overview :" />

                <TextView
                    android:id="@+id/details_overview_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/cardMarginHorizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000"
                    tools:text="what is overview?" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:cardBackgroundColor="#e7dede"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Trailers"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000"
                android:textSize="30sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">

            <LinearLayout
                android:id="@+id/details_trailer1_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="Trailer"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#000" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:cardBackgroundColor="#e7dede"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Reviews"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000"
                android:textSize="30sp" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginEnd="@dimen/cardMarginVertical"
            android:layout_marginLeft="@dimen/cardMarginVertical"
            android:layout_marginRight="@dimen/cardMarginVertical"
            android:layout_marginStart="@dimen/cardMarginVertical"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">

            <TextView
                android:id="@+id/details_reviews_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/cardMarginHorizontal"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000"
                tools:text="what is Reviews?" />


        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>